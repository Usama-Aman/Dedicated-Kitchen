<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.codingpixel.dedicatekitchen">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />


    <application
        android:name=".application.MyApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_dk_app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:roundIcon="@mipmap/ic_dk_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="LockedOrientationActivity"
        tools:replace="android:allowBackup">
        <activity
            android:name=".activities.account.PurchaseHistoryActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.checkout.FinalCheckOutActivity" />
        <activity android:name=".activities.dashboard.ScanQRCodeActivity" />
        <activity
            android:name=".activities.common.WebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.auth.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.auth.VerificationCodeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.auth.AddMobileNumberActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.auth.AccountCreatedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.account.LocationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.account.PromoCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.dashboard.AppWebViewClient"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.account.PaymentMethodsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.order.OrderDetailHistory"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.meal_prep.MealPrepMenusActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.account.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.account.AccountInformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.checkout.SelectPaymentMethodActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.checkout.SelectAddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.checkout.PersonalInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.account.PricingPlans"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.checkout.CartActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.product.MealPrepActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.product.ProductDetailActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.product.CategoryProductsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.product.CategorySelectionActivity" />
        <activity
            android:name=".activities.dashboard.MainBottomBarActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".activities.auth.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.checkout.ShippingMethod"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.dashboard.FavoriteProducts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.auth.SignInActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.onboarding.IntermediateActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".base.BaseActivity" />
        <activity
            android:name=".activities.onboarding.IntroSlidesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.onboarding.SplashActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>